@model ContactModel;

@{
    ViewData["Title"] = "Confirmação para deletar contato";
}

<div class="text-center">
    <h3>Deseja realmente excluir o contato "@Model.Name"?</h3>
</div>

<div style="text-align: center;">
    <a class="btn btn-danger" role="button" asp-controller="Contact" asp-action="Index">Cancelar</a>
    <a class="btn btn-primary" role="button" asp-controller="Contact" asp-route-id="@Model.Id"
        asp-action="Delete">Confirmar</a>
</div>